/* pages/home/home.wxss */
.container {
  padding: 50px;
}

.header {
  text-align: center;
  font-size: 24px;
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.project-list, .partner-list {
  margin-bottom: 20px;
}

.project-item, .partner-item {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.project-name {
  font-size: 16px;
  color: #333;
}

.project-leader {
  font-size: 14px;
  color: #666;
  margin-left: 10px;
}

.partner-username, .partner-major, .partner-grade {
  display: block;
  font-size: 14px;
  color: #666;
}

.bottom-nav {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 10px;
  box-shadow: 0 -1px 10px rgba(0, 0, 0, 0.1);
}

.bottom-nav button {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
}