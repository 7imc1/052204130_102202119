/* pages/project_details/project_details.wxss */
.container {
  padding: 100px;
}

.project-list {
  margin-top: 100px;
}

.project-item {
  background-color: #f2f2f2;
  padding: 10px;
  margin-bottom: 50px;
  border-radius: 10px;
}

.project-name {
  font-size: 20px;
  color: #666;
}

.project-number {
  font-size: 20px;
  color: #666;
}

.project-description {
  font-size: 20px;
  color: #666;
}

.project-requirements {
  font-size: 20px;
  color: #666;
}

.back-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed; /* 固定定位 */
  bottom: 20px; /* 距离底部20px */
  left: 50%; /* 向左50% */
  transform: translateX(-50%); /* 水平居中 */
  background-color: #007aff;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 4px;
  z-index: 1000; /* 确保按钮在其他内容之上 */
}