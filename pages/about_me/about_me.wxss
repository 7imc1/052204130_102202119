page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.bottom-nav {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 10px;
  box-shadow: 0 -1px 10px rgba(0, 0, 0, 0.1);
}


.bottom-nav button {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
}