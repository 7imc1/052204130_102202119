.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #f8f8f8;
}

.login-title {
  font-size: 24px;
  margin-bottom: 40px;
}

.form-item {
  width: 80%;
  margin-bottom: 20px;
}

.form-item text {
  display: block;
  margin-bottom: 10px;
}

.form-item input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.form-item button {
  width: 100%;
  background-color: #1aad19;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
  margin-top: 10px;
}

.extra {
  width: 80%;
  margin-top: 20px;
  font-size: 14px;
  text-align: right;
}

.extra text {
  margin-right: 10px;
  color: #1aad19;
}